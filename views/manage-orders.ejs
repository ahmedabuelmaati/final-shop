<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <%- include("./parts/nav.ejs")%>
        <% if(elements.length> 0 ){%>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <td>no</td>
                            <td>userid</td>

                            <td>products</td>
                            <td>total-price</td>
                            <td>status</td>
                            <td>options</td>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>
                                1
                            </td>
                            <td>
                                <%if(elements.length>0){%>
                                    <%=elements[0].userid%>
                                        <%}else{%>
                                            <%=element.userid%>
                                                <%}%>
                            </td>
                            <td>
                                <% if (elements.length> 0 ){%>
                                    <%for(let i=0 ;i < elements.length ;i++){%>
                                        <%=elements[i].name%>
                                            :
                                            <%=elements[i].amount%>
                                                &
                                                <%}%>
                                                    <%}else{%>
                                                        <%=element.name%>
                                                            <%}%>
                            </td>

                            <td>
                                <% if( elements.length> 0 ){%>
                                    <%let sum=0%>
                                        <%for(let i=0 ;i<elements.length ;i++){%>
                                            <%sum=(elements[i].price*elements[i].amount)+sum%>
                                                <%}%>
                                                    <%=sum%>
                                                        <%}else{%>
                                                            <%=element.price%>
                                                                <%}%>
                            </td>
                            <td>
                                <form action="/cart/changestatus" method="post">
                                    <select name="status" id="" style="text-align: center;">
                                        <option value="pending">pending</option>
                                        <option value="sent">sent</option>
                                        <option value="delivered">delivered</option>

                                    </select>
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                </form>
                            </td>
                            <td>
                                <form method="post" action="/cart/deleteall">

                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>

                        </tr>

                    </tbody>
                </table>
            </div>
            <%}else{%>

                <p class="alert alert-danger" style="text-align: center;
                font-weight:bold;">
                    there is no orders
                </p>
                <%}%>


                    <%- include("./parts/footer.ejs")%>